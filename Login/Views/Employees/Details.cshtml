@model Employee
@{
    ViewData["Title"] = "Details Employee";
}

<div class="text-center">
    <div class="photo container d-flex flex-column gap-3 mt-5">
        <div class="row">
            <div class="col-3">
                <div class="card">
                    <div class="card-body h-100">
                        <div>
                            <i class="fa-solid fa-check"></i>
                            <a class="btn btn-link" asp-controller="Home" asp-action="Index">History hours</a>
                        </div>
                        <hr>
                        <div>
                            <i class="fa-solid fa-user"></i>
                            <a class="btn btn-link" asp-controller="Employees" asp-action="Index">Employee</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-9">
                <div class="card">
                    <div class="card-body">
                        <img src="~/images/@Model.Photo" alt="Photo">
                        <h1 class="text-center">@Model.Names</h1>
                    </div>
                    <hr class="m-5">
                    <h2 class="text-center mb-3">Last hours register</h2>
                    <table class="table table-bordered table">
                        <thead class="table table-dark">
                        <tr>
                            <td>Entry time</td>
                            <td>Departure time</td>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>NN</td>
                            <td>NN</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
</div>