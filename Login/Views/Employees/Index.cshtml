@{
    ViewData["Title"] = "Employee";
}
<!doctype html>
<html lang="en">
<head>

</head>
<body>
<div class="container">
    <form class="form mt-3" method="get" asp-action="Search">
        <div class="mb-3 d-flex gap-3">
            <input class="form-control" type="text" placeholder="Search..." name="search">
            <button class="btn btn-sm btn-outline-dark" type="submit">Search</button>
        </div>
    </form>
    <div class="row">
        <div class="col-md-12">
            <div class="card mt-5">
                <div class="card-body">
                    <h1 class="text-center">All Employees</h1>

                    <table class="table table-bordered table-striped table-hover text-center">
                        <thead class="table table-dark">
                        <tr>
                            <td>ID</td>
                            <td>Names</td>
                            <td>Last Names</td>
                            <td>Type Identification</td>
                            <td>Identified</td>
                            <td>Actions</td>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.Id</td>
                                <td>@employee.Names</td>
                                <td>@employee.LastNames</td>
                                <td>@employee.TypeIdentification</td>
                                <td>@employee.Identified</td>
                                <td>
                                    <a class="btn btn-sm btn-outline-danger" asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                                    <a class="btn btn-sm btn-outline-warning" asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">See employee</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>